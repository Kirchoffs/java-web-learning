<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         metadata-complete="true">

    <servlet>
        <servlet-name>cookie</servlet-name>
        <servlet-class>org.syh.servlet.CookieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cookie</servlet-name>
        <url-pattern>/cookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCookie</servlet-name>
        <servlet-class>org.syh.servlet.DeleteCookieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCookie</servlet-name>
        <url-pattern>/deleteCookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sessionHitotsu</servlet-name>
        <servlet-class>org.syh.servlet.SessionHitotsuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionHitotsu</servlet-name>
        <url-pattern>/sessionHitotsu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sessionFutatsu</servlet-name>
        <servlet-class>org.syh.servlet.SessionFutatsuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionFutatsu</servlet-name>
        <url-pattern>/sessionFutatsu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sessionMittsu</servlet-name>
        <servlet-class>org.syh.servlet.InvalidateSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionMittsu</servlet-name>
        <url-pattern>/sessionMittsu</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
</web-app>